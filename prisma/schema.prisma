generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         String       @id @default(uuid())
  name       String
  email      String       @unique
  password   String
  role       Role         @default(USER)
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  divisiId   String?
  divisi     Divisi?      @relation(fields: [divisiId], references: [id])
  matriksKpi MatriksKPI[]

  verificationToken        String?
  verificationTokenExpires DateTime? // waktu expired token verifikasi
  verified                 Boolean   @default(false)
}

model Divisi {
  id   String @id @default(uuid())
  nama String
  User User[]
}

model MatriksKPI {
  id     String @id @default(uuid())
  UserId String
  User   User   @relation(fields: [UserId], references: [id])
  nilai  Float? // dari Int jadi Float, untuk pecahan
}

enum Role {
  USER
  ADMIN
}
